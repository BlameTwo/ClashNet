<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Proxy的选中模板  -->
    <DataTemplate x:Key="DefaultProxyTemplate" />

    <ItemsPanelTemplate x:Key="DefaultProxyPanel">
        <UniformGrid Columns="0" />
    </ItemsPanelTemplate>

    <ItemsPanelTemplate x:Key="DefaultProxyPanel1500Px">
        <UniformGrid Columns="5" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="DefaultProxyPanel1000Px">
        <UniformGrid Columns="4" />
    </ItemsPanelTemplate>

    <ItemsPanelTemplate x:Key="DefaultProxyPanel850Px">
        <UniformGrid Columns="3" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="DefaultProxyPanel600Px">
        <UniformGrid Columns="2" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="DefaultProxyPanel400Px">
        <UniformGrid Columns="1" />
    </ItemsPanelTemplate>
</ResourceDictionary>